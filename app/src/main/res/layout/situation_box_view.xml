
<com.audeering.sensminer.model.situation.view.SituationBoxView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >


    <!--  SITUATION CHOOSER  -->
    <LinearLayout android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Spinner android:id="@+id/situationSpinner"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <ImageView android:id="@+id/situationEdit"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="center"
            android:src="@drawable/ic_mode_edit_24dp"/>
        <ImageView android:id="@+id/situationDeleteMe"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="center"
            android:src="@drawable/ic_delete_24dp"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/situationFormSlot">
    </FrameLayout>

    <ImageView android:id="@+id/situationCreate"
        android:layout_marginTop="16dp"
        android:layout_gravity="end"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="center"
        android:src="@drawable/ic_add_circle_32dp"/>


</com.audeering.sensminer.model.situation.view.SituationBoxView>
