
<com.audeering.sensminer.model.situation.view.SituationBoxView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   >


    <!--  SITUATION CHOOSER  -->
    <LinearLayout android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <Spinner android:id="@+id/situationSpinner"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <ImageView android:id="@+id/situationEdit"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="center"
            android:src="@drawable/ic_mode_edit_24dp"/>
        <ImageView android:id="@+id/situationDeleteMe"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="center"
            android:src="@drawable/ic_delete_24dp"/>
    </LinearLayout>
    <!--  SITUATION DETAILS  -->
    <LinearLayout
        android:paddingTop="16dp"
        android:paddingStart="@dimen/situationIdent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            style="@style/TextAppearance.AppCompat.Small"
            android:text="@string/activity"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Spinner android:id="@+id/activitySpinner"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:paddingTop="16dp"
        android:paddingStart="@dimen/situationIdent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            style="@style/TextAppearance.AppCompat.Small"
            android:text="@string/phone_position"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Spinner android:id="@+id/positionSpinner"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:paddingTop="16dp"
        android:paddingStart="@dimen/situationIdent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            style="@style/TextAppearance.AppCompat.Small"
            android:text="@string/environment"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Spinner android:id="@+id/environmentSpinner"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout android:paddingTop="16dp"
        android:paddingStart="@dimen/situationIdent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            style="@style/TextAppearance.AppCompat.Small"
            android:text="@string/auxiliary"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <Spinner android:id="@+id/auxiliarySpinner"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView android:layout_marginTop="16dp"
        android:layout_gravity="end"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="center"
        android:src="@drawable/ic_add_circle_32dp"/>
</com.audeering.sensminer.model.situation.view.SituationBoxView>
